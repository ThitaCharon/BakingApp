<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="-  "/>

        <TextView
            android:id="@+id/row_item_ingredient_numeric_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "/>

        <TextView
            android:id="@+id/row_item_ingredient_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/row_item_ingredient_numeric_tv"
            android:text="Cups"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "/>

        <TextView
            android:id="@+id/row_item_ingredient_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/row_item_ingredient_unit_tv"
            android:text="unsalted butter, melted" />

</LinearLayout>